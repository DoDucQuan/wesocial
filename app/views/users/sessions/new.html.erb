<div class="landing-page">
  <div class="content-bg-wrap"></div>
  <%= render "shared/messages" %>
  <div class="header-spacer"></div>
  <div class="container">
    <div class="row display-flex">
      <div class="col col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
        <div class="landing-content">
          <h1>Welcome to the Biggest Social Network in the World</h1>
          <p>We are the best and biggest social network with 5 billion active users all around the world. Share you
            thoughts, write blog posts, show your favourite music via Stopify, earn badges and much more!
          </p>
          <%= link_to "Đăng ký ngay!", "#home", class: "btn btn-md btn-border c-white",
            data: {toggle: :tab} %>
        </div>
      </div>
      <div class="col col-xl-5 col-lg-6 col-md-12 col-sm-12 col-12">
        <!-- Login-Registration Form  -->
        <div class="registration-login-form">
          <!-- Nav tabs -->
          <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
              <%= link_to "#home", data: { toggle: :tab }, role: "tab", class: "nav-link" do %>
              <svg class="olymp-login-icon">
                <use xlink:href="/assets/svg-icons/sprites/icons.svg#olymp-login-icon"></use>
              </svg>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "#profile", data: { toggle: :tab }, role: "tab", class: "nav-link" do %>
                <svg class="olymp-register-icon">
                  <use xlink:href="/assets/svg-icons/sprites/icons.svg#olymp-register-icon"></use>
                </svg>
              <% end %>
            </li>
          </ul>
          <!-- Tab panes -->
          <div class="tab-content">
            <div class="tab-pane" id="home" role="tabpanel" data-mh="log-tab">
              <div class="title h6">Đăng ký tài khoản</div>
              <%= form_for resource, as: resource_name, url: registration_path(resource_name),
                html: { class: "content"} do |f| %>
                <div class="row">

                  <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                    <div class="form-group label-floating">
                      <%= f.label :name, "Họ và Tên", class: "control-label" %>
                      <%= f.text_field :name, autofocus: true, autocomplete: "name",
                        class: "form-control", placeholder: "" %>
                    </div>
                    <div class="form-group label-floating">
                      <%= f.label :email, class: "control-label" %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email",
                        class: "form-control", placeholder: "" %>
                    </div>
                    <div class="form-group label-floating">
                      <%= f.label :password, "Mật khẩu", class: "control-label" %>
                      <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> characters minimum)</em>
                      <% end %>
                      <%= f.password_field :password,
                        autocomplete: "new-password", class: "form-control", placeholder: "" %>
                    </div>
                    <div class="form-group label-floating">
                      <%= f.label :password_confirmation, "Nhập lại mật khẩu", class: "control-label" %>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                        class: "form-control", placeholder: "" %>
                    </div>
                    <div class="form-group date-time-picker">
                      <%= f.label :date_of_birth, "Ngày sinh", class: "control-label" %>
                      <div class="d-flex">
                        <%= f.date_select :date_of_birth, order: [:day, :month, :year],
                          start_year: 1960, prompt: {day: "Ngày", month: "Tháng", year: "Năm"} %>
                      </div>
                    </div>
                    <div class="form-group is-select">
                      <label class="control-label">Giới tính</label>
                        <%= f.select :is_female, [["Nam", false], ["Nữ", true]], {}, class: "selectpicker form-control" %>
                    </div>
                    <%= f.submit "Đăng ký ngay!", class: "btn btn-purple btn-lg full-width" %>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="tab-pane active" id="profile" role="tabpanel" data-mh="log-tab">
              <div class="title h6">Đăng nhập</div>
                <%= form_for resource, as: resource_name, url: session_path(resource_name),
                  html: { class: "content"} do |f| %>
                  <div class="row">
                    <div class="col col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                      <div class="form-group label-floating">
                        <%= f.label :email, class: "control-label" %>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "form-control", placeholder: "" %>
                      </div>
                      <div class="form-group label-floating">
                        <%= f.label :password, "Mật khẩu", class: "control-label" %>
                        <%= f.password_field :password, autocomplete: "current-password",
                          class: "form-control", placeholder: "" %>
                      </div>
                      <div class="remember">
                        <div class="checkbox">
                          <% if devise_mapping.rememberable? %>
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me, "Lưu đăng nhập" %>
                          <% end %>
                        </div>
                        <a href="#" class="forgot" data-toggle="modal" data-target="#restore-password">Quên mật khẩu</a>
                      </div>
                      <%= f.submit "Đăng nhập", class: "btn btn-lg btn-primary full-width actions" %>
                    <div class="or"></div>
                    <%= link_to "Đăng nhập bằng Facebook", user_facebook_omniauth_authorize_path, :class => "btn btn-lg bg-facebook full-width btn-icon-left"  %>
                    <%= link_to "Đăng nhập bằng Google", user_google_oauth2_omniauth_authorize_path, :class =>"btn btn-lg bg-twitter full-width btn-icon-left" %>
                    <p>Don’t you have an account? <a href="#">Register Now!</a> it’s really simple and you can start enjoing all the benefits!</p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <!-- ... end Login-Registration Form  -->
      </div>
    </div>
  </div>
  <!-- Window-popup Restore Password -->
  <div class="modal fade" id="restore-password" tabindex="-1" role="dialog" aria-labelledby="restore-password" aria-hidden="true">
    <div class="modal-dialog window-popup restore-password-popup" role="document">
      <div class="modal-content">
        <a href="#" class="close icon-close" data-dismiss="modal" aria-label="Close">
          <svg class="olymp-close-icon">
            <use xlink:href="/assets/svg-icons/sprites/icons.svg#olymp-close-icon"></use>
          </svg>
        </a>
        <div class="modal-header">
          <h6 class="title">Restore your Password</h6>
        </div>
        <div class="modal-body">
          <form method="get">
            <p>Enter your email and click the send code button. You’ll receive a code in your email. Please use that
              code below to change the old password for a new one.
            </p>
            <div class="form-group label-floating">
              <label class="control-label">Your Email</label>
              <input class="form-control" placeholder="" type="email" value="james-spiegel@yourmail.com">
            </div>
            <button class="btn btn-purple btn-lg full-width">Send me the Code</button>
            <div class="form-group label-floating">
              <label class="control-label">Enter the Code</label>
              <input class="form-control" placeholder="" type="text" value="">
            </div>
            <div class="form-group label-floating">
              <label class="control-label">Your New Password</label>
              <input class="form-control" placeholder="" type="password" value="olympus">
            </div>
            <button class="btn btn-primary btn-lg full-width">Change your Password!</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- ... end Window-popup Restore Password -->
</div>
